


<div class="row">
  <div class="col-sm-6">
    <h1>Employees</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_employee_path, class: 'btn btn-primary' do %>
    Add New Employee
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Auth level</th>
            <th>Auth amount</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Job title</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <%= content_tag :tr, id: dom_id(employee), class: dom_class(employee) do %>
          

                      <td><%= employee.first_name %></td>
                      <td><%= employee.last_name %></td>
                      <td><%= employee.email %></td>
                      <td><%= employee.auth_level %></td>
                      <td><%= employee.auth_amount %></td>
                      <td><%= employee.phone %></td>
                      <td><%= employee.role %></td>
                      <td><%= employee.job_title %></td>
          
          
            <td><%= link_to 'Show', employee %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
