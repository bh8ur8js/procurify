


<div class="row">
  <div class="col-sm-6">
    <h1>Employees</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_employee_path, class: 'btn btn-primary' do %>
    Add New Employee
  <% end %>
  </div>
</div>

<div  class="table-responsive">
  <table id="employee_table" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Name</th>
            <th>Email</th>
            <th>Locations</th>
            <th>Auth level</th>
            <th>Auth amount</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Job title</th>

        
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>

          
          <tr>
                      <td><%= link_to employee.first_name+' '+employee.last_name, employee_path(employee)  %></td>
                      <td><%= employee.email %></td>
                      <td><%= employee.locations.count %></td>
                      <td><%= employee.auth_level %></td>
                      <td><%= employee.auth_amount %></td>
                      <td><%= employee.phone %></td>
                      <td><%= employee.role %></td>
                      <td><%= employee.job_title %></td>


          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#employee_table').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excelHtml5'
            ]
        });
    } );


</script>
